<h1>Items</h1>

<% if @items.empty? %>
    <b>No items in store</b>
<% else %>
<table>
  <tr>
    <th>item id</th>
    <th>Name</th>
    <th>Price</th>
    <th></th>
    <th></th>
  </tr>

  <% @items.each do |i| %>

      <tr>
        <td><%= i.id %></td>
        <td><%= link_to i.name, item_path(i) %></td>
        <td><%= i.price %>rub.</td>
        <td><%= link_to "Delete", i, method: :delete, data: {confirm: "Are you sure"} %></td>
        <td>Rating: <%= i.votes_count %>, <%= link_to "+", upvote_item_path(i) %></td>
      </tr>

  <% end %>

</table>

<% end %>